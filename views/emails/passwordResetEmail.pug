extends baseEmail

block content
	p Hi #{firstName},
		p Welcome to Track-it, we're glad to have you 🎉🙏
		p Forgot your password? Submit a PATCH request with your new password to: #{url}.\n
		p (website for this function has not been implemented yet.)
		table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
			tbody
				tr
					td(align='left')
						table(role='presentation', border='0', cellpadding='0', cellspacing='0')
							tbody
								tr
									td
										a(href=`${url}`, target='_blank') Reset your Password
		p If you didn't forget your password, please ignore this email!