
extends landing 

block content 
	.content
		.heading-form Login
		form.form-user(action='')
			.form-item
				label(for='input-email') Email
				input#input-email(type='email' name='')
				error.error
			.form-item
				label(for='input-password') Password
				input#input-password(type='password' name='')
			.form-item.multiple-x
				.item
					#check.check
						.checkMark
							input#remUser.checkbox(type='checkbox' name='')
							i.fas.fa-check
					label(for='remUser') Remember Me
				.item
					a.link(href='') Forgot Your Password?
			button.btn.primary--active.block.form-item.bold
				| Login
			.form-item.multiple-y
				.item
					.text.bold
						a Don&apos;t have an Account?
						a.link(href='') Signup
				.item
					.text.bold
						a Company not Registered yet?
						a.link(href='') Register now